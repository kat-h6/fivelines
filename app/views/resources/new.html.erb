<div class="card-container-new-resources">
  <div class="container-resources">
    <h3 class="resource-header">New resource to add to <%= @chapter.name %></h3>
    <%= simple_form_for [@chapter, @resource] do |f| %>
          <%= f.input :title, placeholder: 'Resource title' %>
          <%= f.input :photo, as: :file %>
          <%= f.input :video, as: :file %>
          <div class="button-style" style="padding-top: 30px; padding-bottom: 30px;">
          <%= f.submit class: "btn btn-success" %> 
          </div>
    <% end %> 

</div>
</div>

