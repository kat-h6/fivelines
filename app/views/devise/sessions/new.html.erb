<div class="home-sec" style="background-image: url('<%= cl_image_path 'purple-wave_lf0gye.svg', width: 1920, height: 400, crop: :fill %>'); background-repeat: no-repeat;";>
  <div class="logo">
    <%= cl_image_tag 'FiveLines-logo_s65a7k.svg', width: 200, crop: :fill %>
  </div>

  <div class="container">
    <div class="header">
      <h2>Log in</h2>
    </div>

    <div class="card-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "button-green" %>
      </div>
    <% end %>
    </div>

    <div class="form-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
