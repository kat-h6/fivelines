<h1>Lessons</h1>
<% @lessons.each do |lesson| %>
  <p><%= lesson.start_time %> - <%= lesson.end_time %></p>
  <p><%= lesson.rate %></p>
  <p><%= lesson.student.full_name %></p>
<% end %>


<%= month_calendar(events: @meetings, end_attribute: :end_time) do |date, meetings| %>
  <%= date %>

  <% meetings.each do |meeting| %>
    <div class="meeting">  <-- We will add some style to the meeting class later so let's add it now -->
      <p><%= meeting.student.first_name %></p>
    </div>
  <% end %>
<% end %>
