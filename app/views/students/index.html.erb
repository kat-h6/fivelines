<div class="row">
  <div class="col-12 col-lg-3">
  </div>

  <div class="col-12 col-lg-9">
    <div class="container">
    <h1>List of students</h1>

    <%#= SEARCH BAR %>
      <%= form_tag students_path, method: :get do %>
        <div style="display: flex">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a student"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%#= STUDENT LIST %>
        <% @students.each do |student| %>
          <div onclick="location.href='#';" class="card" style="margin-top: 10px; padding: 10px; cursor: pointer;">
            <div style="display: flex; justify-content: space-between">
              <div style="display: flex">
                <%= cl_image_tag("https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1607630183/iqsisg4v7frikbvxikcv.jpg", style: 'border-radius: 50%; height: 100px; width: 100px') %>
                <p><%= student.first_name %> <%= student.last_name %></p>

              </div>
              <div style="color: #d3d3d3">
                <p>Date of birth: <%= student.date_of_birth %> </p>
                <p>Email: <%= student.email %> </p>
              </div>
            </div>
          </div>
        <% end %>
        <%= link_to "Back", root_path, class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
