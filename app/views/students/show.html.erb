<body>
<div class="row">
  <div class="col-12 col-lg-3">
  </div>

  <div class="col-12 col-lg-9">
        <div class="inner-dashboard-container">
          <div>
            <div class="card">
              <div class="student-details">
                <%= cl_image_tag("https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1607630183/iqsisg4v7frikbvxikcv.jpg", style: 'border-radius: 50%; height: 100px; width: 100px') %>
                <div class="personal-info">
                  <h2><%= @student.full_name %></h2>
                  <p><%= @student.email %></p>
                </div>

                <div class="cta">
                  <%= link_to "Join lesson", lesson_path(@lesson), class: "btn btn-success" %>
                </div>
              </div>
              <div>

                <%#= link_to "Message @student.first_name", message_path(student), class: "btn btn-success" %>
              </div>
            </div>
            <div class="d-flex">
              <div class="card col-12 col-lg-8">
                <div class="section-header">
                  <h4>Lesson history</h4>
                </div>

                <div>
                  <% @lessons.each do |lesson| %>
                  <div class="student-lesson">
                    <%= cl_image_tag("https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1607630183/iqsisg4v7frikbvxikcv.jpg", style: 'border-radius: 50%; height: 50px; width: 50px') %>
                    <div class="lesson-info">
                      <h5><%= lesson.created_at.strftime("%a, %e %b %Y") %></h5>
                      <p><%= lesson.start_time.to_s(:time) %> - <%= lesson.end_time.to_s(:time) %></p>
                        </div>
                        <div class="lesson-start">
                          <% if lesson.start_time > Time.now + 5 %>
                            <p>Starts in <%= lesson.start_time - Time.now %></p>
                          <% else %>
                            <%= link_to "Join lesson", lesson_path(@lesson), class: "btn btn-success" %>
                          <% end %>
                        </div>

                  </div>
                  <% end %>
                </div>
              </div>
          </div>
        </div>
      </div>
  </div>
</div>
</body>
