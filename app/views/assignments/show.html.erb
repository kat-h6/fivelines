<h3 style="margin-left: 2rem;"><%= @assignment.title.capitalize %>  </h3>

<div class="show-card-container" style="margin-left: 2rem;">
  <div class="inner-card">
    <p> <strong><%= @assignment.due_date.strftime("%a, %e %b %Y") %></strong> </p>
    <p> <%= @assignment.details %> </p>
    <p> <%= @assignment.feedback %> </p>
    <li class="list-group-item">Assignment completed: <input type="checkbox" checked readonly="readonly" /></li>
  </div>
 
    <p>
    <% if @assignment.photo.attached? %>
      <%= link_to cl_image_path(@assignment.photo.key) do %>
      <%= cl_image_tag @assignment.photo.key, height: 250, width: 300, crop: :fill, style: "vertical-align:top; margin-right: 20px;" %>
    <% end %>
      <% end %>
    <% if @assignment.video.attached? %>
      <%= cl_video_tag @assignment.video.key, height: 250, width: 300, crop: :fill, controls: true %>
    <% end %>
    </p>
</div>



